<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".SecurityComplaintViewDetails">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:gravity="center"
        android:id="@+id/nameonPackageTextView"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:gravity="center"
        android:id="@+id/deliveryPhoneResidentTextView"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:gravity="center"
        android:id="@+id/courierServiceTextView"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:gravity="center"
        android:id="@+id/dateTextView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:gravity="center"
        android:id="@+id/StatusofDelivery"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Received"
        android:id="@+id/SecDeliverySetCompleted"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Collected Delivery"
        android:id="@+id/SecDeliveryCancelBtn"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></Button>




</LinearLayout>